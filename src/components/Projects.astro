---
import LePetitPrince from "./projects/LePetitPrince.astro";
import OpenGLDemo from "./projects/OpenGLDemo.astro";
import RSSFeedsAPI from "./projects/RSSFeedsAPI.astro";
import TravelTime from "./projects/TravelTime.astro";
import ReactSlides from "./projects/ReactSlides.astro";
import AlgoTri from "./projects/AlgoTri.astro";
// import Hikea from "./projects/Hikea.astro";
import VonKochFlake from "./projects/VonKochFlake.astro";
import PointInPolygon from "./projects/PointInPolygon.astro";
import PointInRectangle from "./projects/PointInRectangle.astro";
---

<div>
  <h2 class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white mb-2">
    Projets
  </h2>
  <br/>
  <div class="mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
    <OpenGLDemo />
    <RSSFeedsAPI />
    <LePetitPrince />
    <TravelTime />
    <ReactSlides />
    <AlgoTri />
    <!-- <Hikea /> -->
    <VonKochFlake />
    <PointInPolygon />
    <PointInRectangle />
  </div>
  <br/>
  <div class="text-center p-8 border border-dashed border-gray-500 rounded-lg">
    <div class="inline-flex items-center justify-center mb-4">
      <svg class="w-8 h-8 text-yellow-400 [animation:spin_10s_linear_infinite]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"></path>
      </svg>
    </div>
    <h3 class="text-xl font-semibold text-gray-200 mb-2">Section en construction</h3>
    <p class="text-gray-400">J'ajoute régulièrement du nouveau contenu dans cette section. Revenez bientôt pour découvrir plus de projets !</p>
  </div>
</div>

<style>
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>