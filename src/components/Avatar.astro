---
import { Image } from 'astro:assets';
import headshot from '../assets/headshot.webp';
---

<div class="relative flex items-center gap-x-4">
  <Image 
  src={headshot}
  densities={[1, 2, 3]}
  alt="Developers's headshot"
  class="h-20 w-20 rounded-full"
  />
 
  <div class="text-xl leading-8">
    <h1 class="font-bold text-primary text-3xl dark:text-white mb-2">
      <span class="absolute inset-0"></span>
      Robin HILAIRE
    </h1>
    <p class="text-zinc-500 dark:text-zinc-400 text-xl">Admin Système | Développeur Full Stack</p>
  </div>
</div>
