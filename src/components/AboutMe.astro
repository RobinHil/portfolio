---
import { Image } from 'astro:assets';
import SoftSkills from './SoftSkills.astro';

const aboutCards = [
  {
    icon: "maple",
    title: "Né à Avignon",
    description: "Le 3 avril 2004 (20 ans)"
  },
  {
    icon: "code",
    title: "Passionné d'Informatique",
    description: "Développement, systèmes et nouvelles technologies"
  },
  {
    icon: "music",
    title: "Musicien Passionné",
    description: "Guitariste, bassiste et chanteur rock/metal"
  },
  {
    icon: "camera",
    title: "Photographe Amateur",
    description: "Capturer des moments uniques sur mon temps libre"
  }
]
---

<div class="space-y-8">
  <h2 class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white">
    À propos de moi
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {
      aboutCards.map((card) => (
        <div class="relative group">
          <div class="relative z-10 bg-zinc-900/50 backdrop-blur-sm p-6 h-full border border-zinc-800/50 hover:border-zinc-700/50 transition-all duration-300 group-hover:bg-zinc-900/60">
            <div class="flex items-center justify-center w-10 h-10 mb-3 text-gray-400 group-hover:text-white transition-colors duration-300">
              {card.icon === "maple" && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="0.25" stroke-linecap="round" stroke-linejoin="round">
                  <path d="m22,23v-11.5c0-1.378-1.122-2.5-2.5-2.5h-7v-2.042c1.417-.239,2.5-1.474,2.5-2.958,0-1.578-2.416-3.523-2.691-3.739l-.309-.243-.309.243c-.275.216-2.691,2.161-2.691,3.739,0,1.484,1.083,2.719,2.5,2.958v2.042h-7c-1.378,0-2.5,1.122-2.5,2.5v11.5H0v1h24v-1h-2ZM10,4c0-.736,1.124-1.946,2-2.698.876.752,2,1.962,2,2.698,0,1.103-.897,2-2,2s-2-.897-2-2Zm-5.5,6h15c.827,0,1.5.673,1.5,1.5v4.348c-.246.101-.498.152-.75.152-1.277,0-2.25-1.333-2.25-2h-1c0,.685-.95,2-2.25,2-1.277,0-2.25-1.333-2.25-2h-1c0,.685-.95,2-2.25,2-1.277,0-2.25-1.333-2.25-2h-1c0,.685-.95,2-2.25,2-.252,0-.503-.052-.75-.154v-4.346c0-.827.673-1.5,1.5-1.5Zm-1.5,6.9c.246.066.497.1.75.1,1.139,0,2.172-.699,2.755-1.559.561.837,1.548,1.559,2.745,1.559,1.139,0,2.172-.699,2.755-1.559.561.837,1.548,1.559,2.745,1.559,1.139,0,2.172-.699,2.755-1.559.561.837,1.548,1.559,2.745,1.559.253,0,.504-.033.75-.099v6.099H3v-6.1Z"/>
                </svg>
              )}
              {card.icon === "music" && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 18V5l12-2v13"/>
                  <circle cx="6" cy="18" r="3"/>
                  <circle cx="18" cy="16" r="3"/>
                </svg>
              )}
              {card.icon === "camera" && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M14.5 4h-5L7 7H4a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3l-2.5-3z"/>
                  <circle cx="12" cy="13" r="3"/>
                </svg>
              )}
              {card.icon === "code" && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="16 18 22 12 16 6"></polyline>
                  <polyline points="8 6 2 12 8 18"></polyline>
                </svg>
              )}
            </div>
            <h3 class="mb-2 text-xl font-bold text-white">{card.title}</h3>
            <p class="text-gray-400">{card.description}</p>
          </div>
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 transform translate-x-1 translate-y-1 -z-10 group-hover:translate-x-2 group-hover:translate-y-2 transition-transform duration-300"/>
        </div>
      ))
    }
  </div>

  <div class="hidden lg:grid grid-cols-1 lg:grid-cols-3 gap-6 mt-8">
    <div class="relative aspect-auto overflow-hidden rounded-lg">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-purple-500/10 backdrop-blur-sm">
        <div class="absolute inset-0 bg-zinc-900/90"></div>
      </div>
      <div class="relative z-10 p-6 flex flex-col h-full justify-between">
        <div>
          <h3 class="text-xl font-bold text-white mb-2">Informatique</h3>
          <p class="text-gray-400">Exploration constante des nouvelles technologies et développement de solutions innovantes.</p>
        </div>
        <div class="flex flex-wrap gap-2 mt-4">
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">Dev Full Stack</span>
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">Admin Sys</span>
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">DevOps</span>
        </div>
      </div>
    </div>

    <div class="relative aspect-auto overflow-hidden rounded-lg">
      <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 to-blue-500/10 backdrop-blur-sm">
        <div class="absolute inset-0 bg-zinc-900/90"></div>
      </div>
      <div class="relative z-10 p-6 flex flex-col h-full justify-between">
        <div>
          <h3 class="text-xl font-bold text-white mb-2">Musique</h3>
          <p class="text-gray-400">Rock metal, composition et performance sur scène. Exploration constante de nouveaux styles et techniques.</p>
        </div>
        <div class="flex flex-wrap gap-2 mt-4">
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">Guitare</span>
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">Basse</span>
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">Chant</span>
        </div>
      </div>
    </div>

    <div class="relative aspect-auto overflow-hidden rounded-lg">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-purple-500/10 backdrop-blur-sm">
        <div class="absolute inset-0 bg-zinc-900/90"></div>
      </div>
      <div class="relative z-10 p-6 flex flex-col h-full justify-between">
        <div>
          <h3 class="text-xl font-bold text-white mb-2">Photographie</h3>
          <p class="text-gray-400">Capture de moments uniques et création d'images qui racontent des histoires. Un mélange de technique et de créativité.</p>
        </div>
        <div class="flex flex-wrap gap-2 mt-4">
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">Paysage</span>
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">Portrait</span>
          <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-gray-400 bg-zinc-800 rounded-full">Urbain</span>
        </div>
      </div>
    </div>
  </div>

  <h3 class="text-2xl mt-12 font-medium lg:text-3xl tracking-tight text-primary dark:text-white">
    Soft Skills
  </h3>
  
  <SoftSkills />
</div>