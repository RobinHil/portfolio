---
import Layout from "../layouts/Layout.astro";
import BackButton from "../components/BackButton.astro";
import ProjectCarousel from "../components/ProjectCarousel.astro";
import ProfileBar from "../components/ProfileBar.astro";

// Données pour le carrousel
const slides = [
  {
    imagePath: "/opengl-demo/1.webp",
    alt: "Illumination de Phong avec grille",
    title: "Illumination de Phong avec grille",
    description: "Modèle d'éclairage de Phong avec la grille de position activée pour une meilleure visualisation de l'espace 3D."
  },
  {
    imagePath: "/opengl-demo/2.webp",
    alt: "Illumination de Phong sans grille",
    title: "Illumination de Phong sans grille",
    description: "Rendu avec le modèle d'éclairage de Phong sans la grille, mettant en valeur les nuances d'éclairage sur l'objet."
  },
  {
    imagePath: "/opengl-demo/3.webp",
    alt: "Aucun modèle d'illumination",
    title: "Aucun modèle d'illumination",
    description: "Affichage de l'objet sans modèle d'éclairage, utilisant simplement la couleur de base de l'objet."
  },
  {
    imagePath: "/opengl-demo/4.webp",
    alt: "Illumination de Blinn-Phong",
